.arefresher {
	width: 100%;
	height: 100%;
	background-color: transparent;
	position: relative;
	overflow: hidden;
}

.arefresher__track {
	background-color: transparent;
}

.refresher-upper {
	position: absolute;
	top: -60px;
	left: 0;
	margin: 0;
	height: 50px;
	width: 100%;
	background-color: transparent;
	color: rgba(0, 0, 0, .65);
}

.upper-content {
	margin: 10px auto;
	width: 80%;
}

.upper-content .text {
	display: block;
	width: 100%;
	text-align: center;
	font-size: 14px;
	line-height: 14px;
	margin: 6px auto 0;
}

.refresher-lower {
	position: relative;
	height: 50px;
}

.lower-content {
	position: absolute;
	background-color: transparent;
	color: rgba(0, 0, 0, .65);
	width: 100%;
	top: 50%;
	transform: translateY(-50%);
}

.lower-content .text {
	display: block;
	width: 100%;
	text-align: center;
	font-size: 14px;
}

.hidden {
	display: none;
	opacity: 0;
}

.arrow-down-icon {
	display: block;
	margin: 0 auto;
	width: 20px;
	height: 20px;
	background-repeat: no-repeat;
	background-position: center center;
	background-size: 20px 20px;
	background-image: url("data:image/png;base64,");
}

